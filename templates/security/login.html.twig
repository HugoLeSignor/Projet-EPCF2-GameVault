{% extends 'base.html.twig' %}

{% block title %}Connexion - GameVault{% endblock %}

{% block body %}
    <div class="auth-form">
        <div class="auth-form__card">
            <h1 class="auth-form__title">Connexion</h1>

            {% if error %}
                <div class="flash flash--danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label class="form-label" for="inputEmail">Email</label>
                    <input type="email" id="inputEmail" name="_username" value="{{ last_username }}" class="form-input" required autofocus placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label class="form-label" for="inputPassword">Mot de passe</label>
                    <input type="password" id="inputPassword" name="_password" class="form-input" required placeholder="Votre mot de passe">
                </div>

                <div class="form-check">
                    <input type="checkbox" id="remember_me" name="_remember_me">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn--primary btn--block" type="submit">Se connecter</button>
            </form>

            <div class="auth-form__footer">
                <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>
            </div>
        </div>
    </div>
{% endblock %}
