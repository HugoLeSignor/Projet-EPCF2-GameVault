{% extends 'admin/_layout.html.twig' %}

{% block title %}Ajouter un jeu - GameVault{% endblock %}

{% block admin_content %}
    <div class="page-header">
        <h1 class="page-header__title">Ajouter un jeu</h1>
    </div>

    <div class="card" style="max-width: 700px;">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex gap-sm mt-lg">
                <button type="submit" class="btn btn--primary">Ajouter</button>
                <a href="{{ path('admin_game_index') }}" class="btn btn--outline">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
