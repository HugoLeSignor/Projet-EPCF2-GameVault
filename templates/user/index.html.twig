{% extends 'base.html.twig' %}

{% block title %}Communaut√© - GameVault{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-header__title">{{ query ? 'R√©sultats pour "' ~ query ~ '"' : 'Communaut√©' }}</h1>
    </div>

    <form method="get" action="{{ path('app_users') }}" class="igdb-search-form">
        <div class="d-flex gap-sm">
            <input type="text" name="q" value="{{ query }}" placeholder="Rechercher un joueur..." class="form-input" style="flex: 1;" autofocus>
            <button type="submit" class="btn btn--primary">Rechercher</button>
            {% if query %}
                <a href="{{ path('app_users') }}" class="btn btn--outline">Reset</a>
            {% endif %}
        </div>
    </form>

    {% if query and users|length == 0 %}
        <div class="empty-state">
            <div class="empty-state__icon">üîç</div>
            <h3 class="empty-state__title">Aucun joueur trouv√©</h3>
            <p class="empty-state__text">Aucun utilisateur ne correspond √† "{{ query }}".</p>
        </div>
    {% endif %}

    {% if users|length > 0 %}
        <div class="user-list">
            {% for user in users %}
                <a href="{{ path('app_user_profile', {id: user.id}) }}" class="user-card">
                    <div class="user-card__avatar">
                        {% if user.avatarFilename %}
                            <img src="{{ vich_uploader_asset(user, 'avatarFile') }}" alt="{{ user.pseudo }}">
                        {% else %}
                            <span>{{ user.pseudo|first|upper }}</span>
                        {% endif %}
                    </div>
                    <div class="user-card__info">
                        <h3 class="user-card__name">{{ user.pseudo }}</h3>
                        <p class="user-card__joined">Membre depuis {{ user.createdAt|date('d/m/Y') }}</p>
                    </div>
                </a>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
