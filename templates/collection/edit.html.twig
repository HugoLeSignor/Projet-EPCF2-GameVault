{% extends 'base.html.twig' %}

{% block title %}Modifier {{ entry.game.titre }} - GameVault{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-header__title">Modifier dans ma collection</h1>
    </div>

    <div class="card" style="max-width: 600px;">
        <h2>{{ entry.game.titre }}</h2>
        <p class="text-muted">{{ entry.game.plateforme }} - {{ entry.game.genre }}</p>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex gap-sm mt-lg">
                <button type="submit" class="btn btn--primary">Enregistrer</button>
                <a href="{{ path('app_collection_index') }}" class="btn btn--outline">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
