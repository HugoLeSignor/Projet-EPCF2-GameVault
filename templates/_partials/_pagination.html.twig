{% if pageCount > 1 %}
<nav class="pagination">
    {% if previous is defined and previous %}
        <span class="pagination__item">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;</a>
        </span>
    {% else %}
        <span class="pagination__item pagination__item--disabled"><span>&laquo;</span></span>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <span class="pagination__item">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </span>
        {% else %}
            <span class="pagination__item pagination__item--active"><span>{{ page }}</span></span>
        {% endif %}
    {% endfor %}

    {% if next is defined and next %}
        <span class="pagination__item">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&raquo;</a>
        </span>
    {% else %}
        <span class="pagination__item pagination__item--disabled"><span>&raquo;</span></span>
    {% endif %}
</nav>
{% endif %}
