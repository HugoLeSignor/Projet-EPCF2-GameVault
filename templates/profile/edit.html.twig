{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - GameVault{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-header__title">Modifier mon profil</h1>
    </div>

    <div class="card" style="max-width: 600px;">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex gap-sm mt-lg">
                <button type="submit" class="btn btn--primary">Enregistrer</button>
                <a href="{{ path('app_profile') }}" class="btn btn--outline">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
