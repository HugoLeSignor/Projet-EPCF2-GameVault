{% extends 'base.html.twig' %}

{% block title %}Modifier mon avis - GameVault{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-header__title">Modifier mon avis</h1>
    </div>

    <div class="card" style="max-width: 600px;">
        <h2>{{ review.game.titre }}</h2>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex gap-sm mt-lg">
                <button type="submit" class="btn btn--primary">Enregistrer</button>
                <a href="{{ path('app_game_show', {igdbId: review.game.igdbId}) }}" class="btn btn--outline">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
